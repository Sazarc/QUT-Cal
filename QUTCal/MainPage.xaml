             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="QUTCal.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <ScrollView>
            <StackLayout>
                <Label Text="Welcome to Xamarin.Forms!" 
