<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QUTCal.Views.ClassesPage"
    BindingContext="{StaticResource ClassViewModel}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="AddItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView Color="#003B62"
             AbsoluteLayout.LayoutBounds="0,0,1,0.15"
             AbsoluteLayout.LayoutFlags="All"/>
            
            <Label TextColor="white"
                   HorizontalTextAlignment="Center"
                   FontSize="30"
                   Text="QUT Cal"
                   AbsoluteLayout.LayoutBounds="0.5,0.07,1,0.15"
                   AbsoluteLayout.LayoutFlags="All"/>

            <StackLayout
                Padding="30"
                AbsoluteLayout.LayoutBounds="0,1.2,1,0.85"
                AbsoluteLayout.LayoutFlags="All">

                <ListView ItemsSource="{Binding Classes}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding _Class}"
                                  Detail="{Binding DateAndTime}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            </StackLayout>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
