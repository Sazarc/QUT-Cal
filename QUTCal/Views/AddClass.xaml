<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QUTCal.AddClass"
    Title="Add class">
    <ContentPage.Content>
        <StackLayout Padding="30"
                     AbsoluteLayout.LayoutBounds="0,1.2,1,0.85"
                     AbsoluteLayout.LayoutFlags="All">
            <Label FontSize="20" Text="Class: " />
            <Picker Title="Choose a unit"
                    BindingContext="{StaticResource SubjectViewModel}"
                    ItemsSource="{Binding Subjects}"
                    ItemDisplayBinding="{Binding Unit}"/>
            <Switch IsToggled="false" />
            <Label FontSize="20" Text="Lecture Date:" />
            <DatePicker /><TimePicker />

            <!--Weekly end content-->
            <Label IsVisible="false" FontSize="20" Text="Weekly class: " />
            <Label IsVisible="false" FontSize="20"
                   Text="Weekly end Date: " />
            <DatePicker IsVisible="false" /> <TimePicker IsVisible="false" />
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
