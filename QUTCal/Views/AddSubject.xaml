<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QUTCal.Views.AddSubject"
    Title="New Subject">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
            <StackLayout Padding="30"
                         AbsoluteLayout.LayoutBounds="0,1.2,1,0.85"
                         AbsoluteLayout.LayoutFlags="All">
                <Label FontSize="20" Text="Unit Code: " />
                <Entry Text="{Binding Subject.Code}" Placeholder="Eg. ABC123"/>

                <Label FontSize="20" Text="Unit Description: " />
                <Entry Text="{Binding Subject.Text}" Placeholder="Eg. Business Management" />
            </StackLayout>
    </ContentPage.Content>
</ContentPage>
