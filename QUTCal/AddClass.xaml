<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QUTCal.AddClass">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView Color="#003B62"
             AbsoluteLayout.LayoutBounds="0,0,1,0.15"
             AbsoluteLayout.LayoutFlags="All"/>
            
            <Label TextColor="white"
                   HorizontalTextAlignment="Center"
                   FontSize="30"
                   Text="QUT Cal"
                   AbsoluteLayout.LayoutBounds="0.5,0.07,1,0.15"
                   AbsoluteLayout.LayoutFlags="All"/>

            <StackLayout
                Padding="30"
                AbsoluteLayout.LayoutBounds="0,1.2,1,0.85"
                AbsoluteLayout.LayoutFlags="All">
                    <Label FontSize="20" Text="Class Name: " />
                    <Entry Placeholder="Eg. Accounting 101" />
                    <Label FontSize="20" Text="Class Code: " />
                    <Entry Placeholder="Eg. ABC101" />
                    <Label FontSize="20" Text="Lecture Date: " />
                    <DatePicker />
            </StackLayout>

        </AbsoluteLayout>
        
    </ContentPage.Content>
</ContentPage>
